{
  "name": "skyroc-project",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "turbo run build",
    "changelog": "sr changelog",
    "check-types": "turbo run check-types",
    "commit": "sr git-commit",
    "cpn": "tsx script/cp.ts",
    "deploy:playground": "pnpm --filter skyroc-ui-playground deploy",
    "dev": "turbo run dev",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo run lint",
    "lint:fix": "eslint . --fix",
    "postinstall": "tsx script/postinstall.ts",
    "release": "tsx script/bump.ts",
    "release:alpha": "tsx script/release.ts --type alpha",
    "release:beta": "tsx script/release.ts --type beta",
    "release:prod": "tsx script/release.ts --type prod",
    "release:rc": "tsx script/release.ts --type rc"
  },
  "dependencies": {
    "@changesets/changelog-github": "0.5.1",
    "@changesets/cli": "2.29.7",
    "@skyroc/cli": "workspace:*",
    "bumpp": "^10.3.1"
  },
  "devDependencies": {
    "@soybeanjs/eslint-config": "1.7.0",
    "@types/node": "22.15.3",
    "@types/react": "19.1.0",
    "@types/react-dom": "19.1.1",
    "@unocss/eslint-config": "66.3.2",
    "create-skyroc": "workspace:*",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "5.2.0",
    "eslint-plugin-react-refresh": "0.4.20",
    "eslint-plugin-sort": "4.0.0",
    "prettier": "3.6.0",
    "tailwindcss": "4.1.11",
    "tsdown": "0.15.6",
    "tsup": "8.5.0",
    "tsx": "4.20.3",
    "turbo": "2.5.4",
    "typescript": "5.8.2"
  },
  "pnpm": {
    "overrides": {
      "esbuild": "0.25.5"
    }
  }
}
