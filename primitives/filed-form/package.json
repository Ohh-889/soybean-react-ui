{
  "name": "@skyroc/form",
  "type": "module",
  "version": "0.0.2",
  "description": "Advanced form handling library with type-safe field management for React applications",
  "author": {
    "name": "Ohh",
    "email": "1509326266@qq.com",
    "url": "https://github.com/Ohh-889"
  },
  "license": "MIT",
  "homepage": "https://github.com/Ohh-889/skyroc-ui/tree/master/primitives/filed-form",
  "keywords": ["form", "react-form", "typescript", "form-validation", "field-management", "skyroc"],
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "main": "./dist/index.js",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
      ".": {
        "import": {
          "types": "./dist/index.d.ts",
          "default": "./dist/index.js"
        },
        "require": {
          "types": "./dist/index.d.ts",
          "default": "./dist/index.js"
        }
      }
    }
  },
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "require": "./src/index.ts"
    }
  },
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "types": "./src/index.ts",
  "files": ["README.zh.md", "dist", "README.md"],
  "scripts": {
    "build": "tsdown",
    "lint": "eslint src/**/*.ts --fix"
  },
  "peerDependencies": {
    "@types/react": "*",
    "@types/react-dom": "*",
    "react": "^16.8 || ^17.0 || ^18.0 || ^19.0 || ^19.0.0-rc",
    "react-dom": "^16.8 || ^17.0 || ^18.0 || ^19.0 || ^19.0.0-rc"
  },
  "peerDependenciesMeta": {
    "@types/react": {
      "optional": true
    },
    "@types/react-dom": {
      "optional": true
    }
  },
  "dependencies": {
    "@radix-ui/react-slot": "1.2.3",
    "@skyroc/type-utils": "workspace:*",
    "@skyroc/utils": "workspace:*"
  },
  "devDependencies": {
    "tsdown": "0.15.6",
    "tsx": "4.20.3",
    "typescript": "5.8.2"
  }
}
